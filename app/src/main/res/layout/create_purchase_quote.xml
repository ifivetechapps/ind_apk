<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/two"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Supplier Name	*"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/supplier_name"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:hint="Select Name"
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_green_border_bottom"
                    android:textSize="15sp"
                    android:paddingStart="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Supplier Site"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/supplier_site"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:inputType="textMultiLine"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_green_border_bottom"
                    android:textSize="15sp"
                    android:paddingStart="10dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Delivery Date"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/delivery_date"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:hint="Select Date"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/helvetica"
                    android:background="@drawable/rounded_green_border_bottom"
                    android:textSize="15sp"
                    android:paddingStart="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Quote Tax"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/tax_total"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/helvetica"
                    android:padding="5dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_green_border_bottom"
                    android:textSize="15sp"
                    android:paddingStart="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Quote Total"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/grand_total"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/helvetica"
                    android:padding="5dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_green_border_bottom"
                    android:textSize="15sp"
                    android:paddingStart="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/left_top_head_corner"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Product"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sub_text" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/top_head_middle"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Uom"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sub_text" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/top_head_middle"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Qty"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sub_text" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/top_head_middle"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Uni. Pri."
                    android:textColor="@color/white"
                    android:textSize="@dimen/sub_text" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/top_head_middle"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Dis. %"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sub_text" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/right_top_head_corner"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Amount"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sub_text" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/items_data"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                android:paddingBottom="7dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/two"
        android:visibility="gone"
        android:layout_above="@id/submit"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Total Price"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="price"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:padding="5dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:fontFamily="@font/helvetica"
            android:background="@drawable/rounded_green_border_bottom"
            android:textSize="15sp"
            android:paddingStart="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_weight="2">
        <Button
            android:id="@+id/draft_data"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="Draft"
            android:fontFamily="@font/helvetica"
            android:theme="@style/DarkButton"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/submit_data"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica"
            android:text="Submit"
            android:theme="@style/DarkButton"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>