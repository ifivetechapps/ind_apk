<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/sub_head_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:fontFamily="@font/helvetica"
                android:gravity="center_vertical"
                android:text="Customer Name *"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/cus_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_green_border_bottom"
                android:fontFamily="@font/helvetica"
                android:gravity="left"
                android:hint="Customer Name"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:fontFamily="@font/helvetica"
                android:gravity="center_vertical"
                android:paddingBottom="3dp"
                android:text="Customer Address*"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/cus_add"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/rounded_green_border_bottom"
                android:fontFamily="@font/helvetica"
                android:gravity="left"
                android:hint="Customer Address"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:fontFamily="@font/helvetica"
                android:gravity="center_vertical"
                android:text="Customer Number*"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/cus_num"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_green_border_bottom"
                android:fontFamily="@font/helvetica"
                android:gravity="left"
                android:hint="Customer Number"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:fontFamily="@font/helvetica"
                android:gravity="center_vertical"
                android:text="Customer Email*"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/cus_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_green_border_bottom"
                android:fontFamily="@font/helvetica"
                android:gravity="left"
                android:hint="Customer Email"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="2">

        <Button
            android:id="@+id/submit_data"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:theme="@style/DarkButton" />
    </LinearLayout>

</RelativeLayout>