<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_foreground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/custom_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:background="@color/white"
                android:fontFamily="@font/helvetica"
                android:padding="2dp"
                android:singleLine="true"
                android:text="SO No."
                android:textColor="@color/black"
                android:textSize="@dimen/sub_text" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@color/white"
                android:singleLine="true"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_text" />

            <TextView
                android:id="@+id/so_no"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.20"
                android:background="@color/white"
                android:fontFamily="@font/helvetica"
                android:paddingRight="10dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:background="@color/white"
                android:fontFamily="@font/helvetica"
                android:padding="2dp"
                android:singleLine="true"
                android:text="Customer Name"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_text" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@color/white"
                android:singleLine="true"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_text" />

            <TextView
                android:id="@+id/customer_Name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.20"
                android:background="@color/white"
                android:fontFamily="@font/helvetica"
                android:paddingRight="10dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:background="@color/white"
                android:fontFamily="@font/helvetica"
                android:padding="2dp"
                android:singleLine="true"
                android:text="Order Date"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_text" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@color/white"
                android:singleLine="true"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_text" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.20"
                android:background="@color/white"
                android:fontFamily="@font/helvetica"
                android:paddingRight="10dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:background="@color/white"
                android:fontFamily="@font/helvetica"
                android:padding="2dp"
                android:singleLine="true"
                android:text="SOI Price"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_text" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@color/white"
                android:singleLine="true"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_text" />

            <TextView
                android:id="@+id/total"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.20"
                android:background="@color/white"
                android:fontFamily="@font/helvetica"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="-"
                android:textColor="@color/green_bg"
                android:textSize="@dimen/sub_text"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:background="@color/white"
                android:fontFamily="@font/helvetica"
                android:padding="2dp"
                android:singleLine="true"
                android:text="Source"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_text" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@color/white"
                android:singleLine="true"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_text" />

            <TextView
                android:id="@+id/source"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.20"
                android:background="@color/white"
                android:fontFamily="@font/helvetica"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="-"
                android:textColor="@color/green_bg"
                android:textSize="@dimen/sub_text"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_lay"
        android:layout_weight="2">

        <Button
            android:id="@+id/reject_button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica"
            android:text="Reject"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_text"
            android:theme="@style/RejectButton" />

        <Button
            android:id="@+id/accept_button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica"
            android:text="Approve"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_text"
            android:theme="@style/AcceptButton" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/button_lay"
        android:background="@drawable/gradient" />

</RelativeLayout>